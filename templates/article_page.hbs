<section id="banner" class="w-full h-[300px]">
	<img
		src="{{settings.banner}}"
		alt="banner"
		class="w-full h-[300px] object-cover"
	/>
</section>

<section
	id="main-content"
	class="flex-1 h-full pt-8 bg-white"
>
	<div class="flex flex-col max-w-7xl mx-auto">
		<div class="w-full px-4 lg:px-0">
			<a
				href="{{page_path 'help_center'}}"
				class="flex items-center text-sm gap-2 text-ott-tertiary"
			>
				<i class="ph ph-caret-left text-md mt-0.5"></i>
				Back to Homepage
			</a>
		</div>
		<section
			class="flex-1 flex flex-col md:flex-row gap-4 px-4 lg:px-0 py-8"
		>
			<aside
				id="section-sidebar"
				class="w-full md:w-[25%] h-max menu rounded-box p-0 gap-2"
			>
				<h2 class="text-lg w-full font-semibold">
					{{t 'articles_in_section'}}
				</h2>
				{{#each section.articles}}
					<a
						href="{{url}}"
						class="btn flex-1 flex justify-start items-center {{#is id ../article.id}}bg-ott-secondary{{else}}btn-outline border-2{{/is}} text-[14px] text-ott-tertiary btn-ott-secondary border-ott-secondary 
						hover:border-ott-secondary hover:bg-ott-secondary text-start leading-4"
					>
						{{title}}
					</a>
				{{/each}}
			</aside>

			{{! Content Goes Here }}
			<article
				id="content"
				class="flex-1 flex flex-col px-0 md:px-4 py-4 md:py-0 gap-4"
			>
				<h1 class="text-2xl font-bold text-ott-tertiary">
					{{article.title}}
				</h1>
				<div id="article-content" class="article-content flex flex-col gap-2">
					{{article.body}}
				</div>
				{{#with article}}
				<div id="article-votes" class="flex flex-col items-center justify-center mt-4">
					<h5 class="text-ott-tertiary text-base">
						{{t 'was_this_article_helpful'}}
					</h5>
					<div class="article-votes-controls mt-2" role="group" aria-labelledby="article-votes-label">
						{{
							vote 'up' 
							role='button' 
							class='btn btn-sm btn-outline border-ott-tertiary hover:bg-ott-tertiary text-ott-tertiary hover:text-white'
						}}
						{{
							vote 'down' 
							role='button' 
							class='btn btn-sm btn-outline border-ott-tertiary hover:bg-ott-tertiary text-ott-tertiary hover:text-white'
						}}
					</div>
					<small class="article-votes-count mt-2">
						{{vote 'label' class='article-vote-label'}}
					</small>
				</div>
				{{/with}}
			</article>
		</section>
	</div>
</section>

<section
	id="create-ticket"
	class="w-full flex items-center justify-center bg-white px-4"
>
	<section class="max-w-7xl flex-1 flex flex-col items-center justify-center mx-auto py-8">
		<h4 class="text-2xl font-bold text-ott-tertiary text-center">Need more help?</h4>
		<p class="text-md font-semibold text-ott-tertiary text-center mt-2">
			Submit a ticket to our support team, and we'll assist you in resolving your issue.
		</p>
		<a
			href="{{page_path 'new_request'}}"
			class="btn w-full sm:w-[250px] bg-ott-secondary hover:bg-ott-secondary/85 border-none text-ott-tertiary mt-4"
		>
			<i class="ph ph-envelope text-ott-tertiary text-2xl"></i>
			Contact us
		</a>
	</section>
</section>